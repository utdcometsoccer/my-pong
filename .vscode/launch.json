  "version": "0.2.0",
  "configurations": [
    {
      "type": "msedge",
      "request": "attach",
      "name": "Attach",
      "webRoot": "${workspaceFolder}/src",
      "outFiles": ["${workspaceFolder}/dist/*.js", "!**/node_modules/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/dist/*.map"],
      "preLaunchTask": "npm: dev",
      "perScriptSourcemaps": "no",
      "smartStep": true,
      "port": 10001
    }
  ]
}
